.navbar
  .logo
    border-radius 50%

.tags-wrapper
    .tags-item
      padding 4px 10px
      margin-right 15px
      border-radius 2px
      color #fff
      cursor pointer
      background-color $accentColor
      &.active
        position relative
        &::after
          position absolute
          content ''
          bottom -8px
          left 50%
          width 6px
          height 6px
          margin-left -3px
          background-color $accentColor
          border-radius 50%
.article-list
  .article
    margin-top 20px
    border-radius 4px
    padding 20px
    border-bottom 1px solid #f8f8f8
    box-shadow 0 0 10px #eee
    .more
      text-align right
    div, h1, h2, h3
      margin 0
      padding 0
      font-size 14px
    h1
      font-size 16px
      color $accentColor